.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 40rpx;
  border-radius: 50%;
}

.input-box {
  width: inherit;
  height: inherit;
  text-align: center;
}

.border {
  width: 500rpx;
  height: 100rpx;
  border-color: blue;
  border-width: medium;
}
.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  text-align: center;
  height: 100rpx;
}

.hint-button {
  border: none;
  background-color: transparent;
  border-color: transparent;
  opacity: 0;
  color: grey;
}

.hint-button::after {
  border:none;
}

.divider {
  width: 600rpx;
  height: 20rpx;
  margin-top: 20px;
  background-color: lightskyblue;
  border-radius: 20px;

}